<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/background_light"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        app:layout_scrollFlags="scroll|enterAlways" />
    <LinearLayout
        android:id="@+id/footer"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="?android:attr/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@+id/buttonClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:text="@string/done" />
    </LinearLayout>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/fields"
        android:background="#CDCDCD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/footer">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#CDCDCD"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <RelativeLayout
                android:padding="10dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <CheckBox
                    android:id="@+id/chekOnlyWiFi"
                    android:layout_gravity="right|center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/chekOnlyWiFi"
                    android:layout_alignParentLeft="true"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:text="@string/label_only_wifi"
                    android:layout_marginRight="0.0dp" />
            </RelativeLayout>
            <LinearLayout
                android:background="#CDCDCD"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <RelativeLayout
                android:padding="5dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:text="@string/label_version" />
                <TextView
                    android:id="@+id/labelVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    android:text="" />
            </RelativeLayout>
            <LinearLayout
                android:background="#CDCDCD"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <RelativeLayout
                android:padding="5dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_alignParentLeft="true"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:text="@string/label_build" />
                <TextView
                    android:id="@+id/labelBuild"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    android:text="" />
            </RelativeLayout>
            <LinearLayout
                android:background="#CDCDCD"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <LinearLayout
                android:id="@+id/reset1LinearLayout"
                android:padding="5dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2E70B1"
                    android:textSize="14sp"
                    android:padding="1dp"
                    android:text="@string/reset1Label" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    android:padding="1dp"
                    android:text="@string/reset1Desc" />
            </LinearLayout>
            <LinearLayout
                android:background="#CDCDCD"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <LinearLayout
                android:id="@+id/reset2LinearLayout"
                android:padding="5dp"
                android:background="@android:color/white"
                android:clickable="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2E70B1"
                    android:textSize="14sp"
                    android:padding="1dp"
                    android:text="@string/reset2Label" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#777777"
                    android:textSize="12sp"
                    android:padding="1dp"
                    android:text="@string/reset2Desc" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</RelativeLayout>