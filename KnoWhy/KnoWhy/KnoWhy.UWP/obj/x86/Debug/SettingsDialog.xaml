<ContentDialog x:ConnectionId='1'
    x:Class="KnoWhy.UWP.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:KnoWhy.UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Style="{StaticResource ContentDialogStyle1}"
                                                         
                                                       
                                       >

    <ContentDialog.Resources>
        <local:ValueConverter x:Key="Visibility" mode="1" />
        <local:ValueConverter x:Key="filterEnabled" mode="2" />
        <local:ValueConverter x:Key="filterEnabledShowDesc" mode="3" />
        <local:ValueConverter x:Key="isSortedByDate" mode="4" />
        <local:ValueConverter x:Key="isSortedByChapterAndVerse" mode="5" />
        <local:ValueConverter x:Key="isSortedAsc" mode="6" />
        <local:ValueConverter x:Key="isSortedDesc" mode="7" />
        <local:ValueConverter x:Key="isFilteredFavorites" mode="8" />
        <local:ValueConverter x:Key="isFilteredUnreaded" mode="9" />
        <local:ValueConverter x:Key="isFilteredBookAndChapter" mode="10" />
        <local:ValueConverter x:Key="isChecked" mode="12" />

    </ContentDialog.Resources>

    <Grid HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch" Margin="0" Background="White">
            <Grid HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="30" />
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='12' Grid.Column="0" HorizontalAlignment="Stretch" TextWrapping="WrapWholeWords"                                            Foreground="Black" Margin="5" />
                <CheckBox x:ConnectionId='13' Name="checkbox" Grid.Column="1"                                                                                                      />
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="3" HorizontalAlignment="Stretch" Margin="1" Background="White">
            <Grid HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='10' Grid.Column="0" HorizontalAlignment="Stretch"                                           Foreground="Black" Margin="5" />
                <TextBlock x:ConnectionId='11' Grid.Column="1" HorizontalAlignment="Right"                                      Foreground="#FF555555" Margin="5" />
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="4" HorizontalAlignment="Stretch" Margin="1" Background="White">
            <Grid HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBlock x:ConnectionId='8' Grid.Column="0" HorizontalAlignment="Stretch"                                         Foreground="Black" Margin="5" />
                <TextBlock x:ConnectionId='9' Grid.Column="1" HorizontalAlignment="Right"                                    Foreground="#FF555555" Margin="5" />
            </Grid>
        </StackPanel>
        
        <Button x:ConnectionId='2' Name="resetContent" Grid.Row="6" HorizontalAlignment="Stretch" Margin="1" Background="White" HorizontalContentAlignment="Stretch"                           >
            <Button.Content>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:ConnectionId='6' Grid.Row="0" HorizontalAlignment="Stretch"                                    Foreground="#FF2E70B1" Margin="0" />
                    <TextBlock x:ConnectionId='7' Grid.Row="1" HorizontalAlignment="Stretch"                                         FontSize="12" TextWrapping="WrapWholeWords" Foreground="#FF555555" Margin="0" />
                </Grid>
            </Button.Content>
        </Button>
        <Button x:ConnectionId='3' Name="resetDatabase" Grid.Row="7" HorizontalAlignment="Stretch" Margin="1" Background="White" HorizontalContentAlignment="Stretch"                            >
            <Button.Content>
                <Grid HorizontalAlignment="Stretch">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock x:ConnectionId='4' Grid.Row="0" HorizontalAlignment="Stretch"                                        Foreground="#FF2E70B1" Margin="0" />
                    <TextBlock x:ConnectionId='5' Grid.Row="1" HorizontalAlignment="Stretch"                                             FontSize="12" TextWrapping="WrapWholeWords" Foreground="#FF555555" Margin="0" />
                </Grid>
            </Button.Content>
        </Button>
    </Grid>
</ContentDialog>

